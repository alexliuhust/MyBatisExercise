<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.alexSpring.po.Customer">

	<select id="findCustomerById" parameterType="Integer" resultType="com.alexSpring.po.Customer">
		select * from t_customer where id = #{id}
	</select>
	
	<select id="findCustomerByName" parameterType="String" resultType="com.alexSpring.po.Customer">
		<!-- select * from t_customer where username like '%${value}%' -->
		<!-- To avoid the illegal SQL injection issue from the line right above, we replace ${value} with concat()-->
		select * from t_customer where username like concat('%', #{username}, '%')
	</select>
	
	
	
	
</mapper>
